<Window x:Class="CardsWPF.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardsWPF.Views"
        xmlns:c ="clr-namespace:CardsWPF.Models"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="450" Width="800">
    <Window.DataContext>
        <c:Card>

        </c:Card>
    </Window.DataContext>
    <Grid>
        <TextBox x:Name="TitleBox" HorizontalAlignment="Center" Margin="0,0,0,70" Width="140" Height="35" />
        <Button Content ="Image" Click="Update_OnClick" HorizontalAlignment="Center" Margin="0,10,0,0" Width="100" Height="35"/>
        <Button Content ="Accept" Click="Accept_OnClick" VerticalAlignment="Bottom" Margin="0,0,0,5" Width="100" Height="35"/>
       
    </Grid>
</Window>
